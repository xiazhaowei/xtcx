@{
    Layout = null;
}

<nav class="navbar navbar-default navbar-static-top cx-navbar" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand cx-navbar-brand" href="/">
            <span>
                <img class="cx-logo" src="/content/img/logo.png" />
                <div class="cx-fontgreen">协同创新数据库</div>
            </span>
        </a>
    </div>
    <!-- /.navbar-header -->
    <ul id="navbar-top-list" class="nav navbar-top-links navbar-right">
        @if (!User.Identity.IsAuthenticated)
        {
            <li><a href="/account/login" class="cx-fontgreen">登录</a></li>
            <li><a href="/account/register" class="cx-fontgreen">注册</a></li>
        }
        else
        {
            <!-- /.dropdown -->
            <li class="dropdown cx-dropdown-font">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i><span>欢迎您：@ViewBag.MyAccount.Name [@ViewBag.MyAccount.Type]</span> <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="/account"><i class="fa fa-user fa-fw"></i> 个人资料</a>
                    </li>
                    <li>
                        <a href="/account/myorganizations"><i class="fa fa-list-alt fa-fw"></i> 我的材料</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="/Account/LogOff"><i class="fa fa-sign-out fa-fw"></i> 退出系统</a>
                    </li>
                </ul>
                <!-- /.dropdown-user -->
            </li>
        <!-- /.dropdown -->
        }


    </ul>
    <!-- /.navbar-top-links -->    
</nav>



<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">通知</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                <p>
                                    专家数据库正在完善中！
                                </p>
                                <!-- Change this to a button or input when using this as a form -->                                
                                <button type="button" class="btn btn-success btn-block" data-dismiss="modal">确定</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>